<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/llItemClick"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="9dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMaPhongSD"
                style="@style/style_text_ctsd"
                android:layout_width="107dp"
                android:text="@string/maPhong" />
            <TextView
                android:id="@+id/tvMaThietBiSD"
                style="@style/style_text_ctsd"
                android:layout_width="130dp"
                android:text="@string/maTB" />
            <TextView
                android:id="@+id/tvSoLuongMuon"
                style="@style/style_text_ctsd"
                android:layout_width="match_parent"
                android:text="@string/slmuon" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>